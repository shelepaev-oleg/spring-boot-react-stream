{
    "compilerOptions": {
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,    // that is probably the important one
//        "strict": true,
//        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,                 // this also
        "jsx": "react",
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "./build/",
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext",
            "es2015"
        ],
        // https://coderoad.ru/37260901/%D0%9A%D0%B0%D0%BA-%D0%BD%D0%B0%D0%B9%D1%82%D0%B8-%D0%BC%D0%BE%D0%B4%D1%83%D0%BB%D1%8C-fs-%D0%B2-MS-%D0%BA%D0%BE%D0%B4%D0%B5-%D1%81-TypeScript
        "moduleResolution": "node",
        "resolveJsonModule": true,
//        "isolatedModules": true,
//        "noEmit": true,
        "allowJs": true
//        "typeRoots": [
//            "./node_modules/@types"
//        ]
    },
    "include": ["./src/**/**/*"]
}
